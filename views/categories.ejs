<!DOCTYPE html>
<html>
<head>
  <title>Categories</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .category-button {
      display: inline-block;
      padding: 10px 20px;
      margin: 10px;
      font-size: 16px;
      border-radius: 8px;
      background-color: #007BFF;
      color: white;
      text-decoration: none;
      transition: background-color 0.3s;
    }
    .category-button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1>Select a Category</h1>
  <div><a href="/products/all" class="category-button">All Products</a></div>
  <div>
    <% categories.forEach(category => { %>
      <a href="/products/category/<%= category.id %>" class="category-button">
        <%= category.name %>
      </a>
    <% }) %>
  </div>
</body>
</html>
