<!DOCTYPE HTML>

<head>
  <title>Cart</title>
  <style>
    body {
      width: 50%;
      margin: 0px 25%;
    }

    a {
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
      color: black;
    }

    .product-card {
      border: 1px solid #ccc;
      border-radius: 12px;
      padding: 20px;
      margin: 20px 0px;

      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      align-items: center;
    }

    .product-image {
      width: 200px;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
    }

    .description-box {
      height: 220px;
      width: 70%;
      margin-left: 5%;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
    }

    .product-name h1 {
      font-size: 1.4rem;
      font-weight: 300;
      text-decoration: none;
      color: black;
    }

    .quantity-button {
      border-radius: 15px;
      border: 1px solid black
    }
    .quantity-button:hover {
      cursor: pointer;
      background-color: #dedede;
    }

    h1 {
      margin: 0;
    }

    .globalCartSection {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 50px 0px;
      width: 100%;
    }

    #clearCartButton {
      background-color: red;
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 10px;
    }

    #clearCartButton:hover {
      background-color: rgb(255, 80, 80);
    }

    .final-price {
      font-size: 1.8rem;
    }

    #checkout-button {
      background-color: rgb(0, 128, 68);
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 10px;
      float: right;
      width: 250px;
      margin-bottom: 50px;
    }

    #checkout-button:hover {
      background-color: rgb(0, 163, 87);
    }
   </style>
</head>

<body>
  <% if (isAuthenticated) { %>
    <div>
      <% products.forEach(product=> { %>
        <div class="product-card">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="product-image" />
          <div class="description-box">
            <h1>
              <%= product.brand %>
            </h1>
            <a class="product-name" href="/products/<%= product.product_id %>">
              <h1><%= product.name %></h1> 
            </a>
            <div class="price">Unit price : <%= Number(product.price).toFixed(2) %> €</div>
            <div class="quantity">
              <span>Quantity : </span>
              <form action="/cart/removeOne" method="POST" style="display:inline;">
                <input type="hidden" name="itemId" value="<%= product.id %>">
                <button type="submit"  class="quantity-button">-</button>
              </form>
              <span><%= Number(product.quantity).toFixed(0) %></span>
              <form action="/cart/addOne" method="POST" style="display:inline;">
                <input type="hidden" name="itemId" value="<%= product.id %>">
                <button type="submit"  class="quantity-button">+</button>
              </form>
            </div>
            <div class="total-price">Total price : <%= Number(product.total_price).toFixed(2) %> €</div>
          </div>
        </div>
        <% }) %>
    </div>
    <div class="globalCartSection">
      <form action="/cart/clearCart" method="POST">
        <input type="hidden" name="clear-cart" value="<%= cart_id %>">
        <button type="submit" id="clearCartButton">Clear Cart</button>
      </form>
      <div class="final-price">Total price : <%= Number(final_price).toFixed(2) %> €</div>
    </div>
    <div class="checkout">
      <form action="/checkout/initiate" method="POST">
        <input type="hidden" name="cart_id" value="<%= cart_id %>">
        <input type="hidden" name="total_price" value="<%= Number(final_price).toFixed(2) %>">
        <button type="submit" id="checkout-button">Checkout</button>
      </form>
    </div>
    <% } else { %>
      <div id="guest-cart">
      </div>
      <div class="globalCartSection">
        <button id="clearCartButton">Clear Cart</button>
        <div class="final-price">Total price : 0 €</div>
      </div>
      <div class="checkout">
        <form action="/checkout" method="GET">
          <input type="hidden" name="checkout">
          <button type="submit" id="checkout-button">Checkout</button>
        </form>
      </div>
      <% } %>

        <script>
          const isAuthenticated = <%= JSON.stringify(isAuthenticated) %>;

          if (!isAuthenticated) {
            // Guest user - load cart from localStorage
            const guestCart = JSON.parse(localStorage.getItem('cart')) || [];
            const guestCartContainer = document.getElementById('guest-cart');

            // Clear the cart from localStorage
            document.getElementById('clearCartButton').addEventListener('click', function () {
              localStorage.removeItem('cart');
              alert('Your cart has been cleared.');
              location.reload();
            });

            // Remove item quantity
            function removeOneFromLocalCart(itemId) {
              let cart = JSON.parse(localStorage.getItem('cart')) || [];

              const itemIndex = cart.findIndex(item => item.product_id === itemId);

              if (itemIndex !== -1) {
                cart[itemIndex].quantity -= 1;
                if (cart[itemIndex].quantity <= 0) {
                  cart.splice(itemIndex, 1);
                }
                localStorage.setItem('cart', JSON.stringify(cart));
                location.reload();
              } else {
                console.log('Item not found.');
              }
            };

            function addOneToLocalCart(itemId) {
              let cart = JSON.parse(localStorage.getItem('cart')) || [];

              const itemIndex = cart.findIndex(item => item.product_id === itemId);

              cart[itemIndex].quantity += 1;
              
              localStorage.setItem('cart', JSON.stringify(cart));
              location.reload();
            };

            if (guestCart.length === 0) {
              guestCartContainer.innerHTML = '<h2>Your cart is empty.</h2>';
            } else {
              let finalPrice = 0;
              guestCart.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';

                productCard.innerHTML = `
              <img src="${product.image_url}" alt="${product.name}" class="product-image" />
              <div class="description-box">
                <h1>${product.brand}</h1>
                <a class="product-name" href="/products/${product.product_id}">
                  <h1>${product.name}</h1>
                </a>
                <div class="price">Unit price : ${Number(product.price).toFixed(2)} €</div>
                <div class="quantity">
                  <span>Quantity : </span>
                  <button class="quantity-button" onclick="removeOneFromLocalCart('${product.product_id}')">-</button>
                  <span>${Number(product.quantity).toFixed(0)}</span>
                   <button class="quantity-button" onclick="addOneToLocalCart('${product.product_id}')">+</button>
                </div>
                <div class="total-price">Total price : ${(Number(product.price) * product.quantity).toFixed(2)} €</div>
              </div>
            `;

                guestCartContainer.appendChild(productCard);
                finalPrice += (product.price * product.quantity);
              });
              document.querySelector('.final-price').textContent = 'Total Price : ' + finalPrice.toFixed(2) + ' €';
            }
          }
        </script>

</body>

</body>